{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "noEmit": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "dom", "es6"
    ],
  },
  "exclude": [
    "node_modules"
  ]
}